{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "no-unused-vars": "off",
        "max-len": [ "error", { "code": 200 } ],
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off"
    }
}
